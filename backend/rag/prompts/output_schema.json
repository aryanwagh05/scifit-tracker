{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RAGChatResponse",
  "type": "object",
  "required": ["answer", "citations", "confidence", "retrieved_chunks"],
  "properties": {
    "answer": {
      "type": "string"
    },
    "citations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "source", "chunk_id"],
        "properties": {
          "title": { "type": "string" },
          "source": { "type": "string" },
          "chunk_id": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "retrieved_chunks": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
